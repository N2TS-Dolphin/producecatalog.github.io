          <div>
            <h3 class="product-price">{{product.price}}VND</h3>
            <span class="product-available">{{product.status}}</span>
          </div>
          <p>{{product.description}}</p>

          <div class="add-to-cart">
            <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i>
