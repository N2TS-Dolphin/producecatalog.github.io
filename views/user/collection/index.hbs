<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
      <div class="col-md-12">
        <h3 class="breadcrumb-header">Collection</h3>
        <ul class="breadcrumb-tree">
          <li><a href="/">Home</a></li>
          <li class="active">Collection</li>
        </ul>
      </div>
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
      <!-- ASIDE -->
      <div id="aside" class="col-md-3">
        <!-- aside Widget -->
        <div class="aside">
          <h3 class="aside-title">Filter and Sort</h3>
          <div class="checkbox-filter" id="categoryFilters">

            <form action="/collection" method="get">
              <span>Product name: </span>
              <br>
              <input class="input" type="text" id="productname" name="product_name" {{#if currentFilter.product_name}}value="{{currentFilter.product_name}}"{{/if}}>
              <br>
              <span>Categories: </span>
              <select class="input" id="category" name="category">
                {{#if currentFilter.category}}<option value={{currentFilter.category}}>{{currentFilter.category}}</option>{{/if}}

                <option value="">None</option>

                {{#each categories}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
              </select>
              <br>
              <span>Manufacturer: </span>
              <select class="input" id="manufacturer" name="manufacturer">
                {{#if currentFilter.manufacturer}}<option value={{currentFilter.manufacturer}}>{{currentFilter.manufacturer}}</option>{{/if}}

                <option value="">None</option>

                {{#each manufacturers}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
              </select>
              <br>
              <span>Price range: </span>
              <br>
              <div class="price-filter">
                <div>
                  <div>
                  <input class="input" style="width: 45%" id="min-price" type="number" name="price_min" {{#if currentFilter.min_price}}value="{{currentFilter.min_price}}"{{/if}}/>
                :
                  <input class="input" style="width: 45%" id="max-price" type="number" name="price_max" {{#if currentFilter.max_price}}value="{{currentFilter.max_price}}"{{/if}}/>
                </div>
                </div>
              </div>
              <br>
              <span>Sort by: </span>
              <select class="input" id="sortby" name="sort_by">
                {{#if currentFilter.sort_by}}<option value={{currentFilter.sort_by}}>{{currentFilter.sort_by}}</option>{{/if}}

                <option value="">None</option>
                <option value="price">price</option>
                <option value="creation_time">creation_time</option>
              </select>
              <br>
              <span>Order: </span>
              <select class="input" id="sortorder" name="sort_order">
                {{#if currentFilter.sort_order}}<option value={{currentFilter.sort_order}}>{{currentFilter.sort_order}}</option>{{/if}}

                <option value="descending">descending</option>
                <option value="ascending">ascending</option>

              </select>
              <br>
              <button class="primary-btn cta-btn" type="submit">Filter</button>
            </form>

          </div>
        </div>
        <!-- /aside Widget -->

      </div>
      <!-- /ASIDE -->

      <!-- STORE -->
      <div id="store" class="col-md-9">
        <!-- store top filter -->
        <div class="store-filter clearfix">
          <div class="store-sort">
            <label>
              Sort By:
              <select class="input-select">
                <option value="0">Popular</option>
                <option value="1">Position</option>
              </select>
            </label>

            <label>
              Show:
              <select class="input-select">
                <option value="0">20</option>
                <option value="1">50</option>
              </select>
            </label>
          </div>
          <ul class="store-grid">
            <li class="active"><i class="fa fa-th"></i></li>
            <li><a href="#"><i class="fa fa-th-list"></i></a></li>
          </ul>
        </div>
        <!-- /store top filter -->

        <!-- store products -->
        <div class="row">
          <!-- product -->
          {{#each products}}
          <div class="col-md-4 col-xs-6">
            <div class="product">
              <div class="product-img">
                <img src="/img/{{this.product_img}}" alt="">
              </div>
              <div class="product-body">
                <p class="product-category">{{this.category}}</p>
                <h3 class="product-name"><a href="/product?id={{this._id}}">{{this.product_name}}</a></h3>
                <h4 class="product-price">{{this.price}}VND</h4>
                <div class="product-rating">
                </div>
                <div class="product-btns">
                  <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to
                      wishlist</span></button>
                  <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">add to
                      compare</span></button>
                  <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick
                      view</span></button>
                </div>
              </div>
              <div class="add-to-cart">
                <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>
              </div>
            </div>
          </div>
          {{/each}}
          <!-- /product -->
        </div>
        <!-- /store products -->

        <!-- store bottom filter -->
        <div class="store-filter clearfix">
          <span class="store-qty">Showing {{productCount}} products</span>


          <ul class="store-pagination">
            {{#paginate pagination type="first"}}
            <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">First</a></li>
            {{/paginate}}
            {{#paginate pagination type="previous"}}
            <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">Prev</a></li>
            {{/paginate}}

            {{#paginate pagination type="middle" limit="5"}}
            <li {{#if active}}class="active" {{/if}}><a href="?page={{n}}">{{n}}</a></li>
            {{/paginate}}


            {{#paginate pagination type="next"}}
            <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">Next</a></li>
            {{/paginate}}
            {{#paginate pagination type="last"}}
            <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">Last</a></li>
            {{/paginate}}
          </ul>
        </div>
        <!-- /store bottom filter -->
      </div>
      <!-- /STORE -->
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<!-- /SECTION -->
